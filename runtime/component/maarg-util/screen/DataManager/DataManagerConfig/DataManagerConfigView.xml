<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="${dataManagerConfig?dataManagerConfig.description:''} [${configId}]" default-menu-index="1" default-menu-include="false">

    <parameter name="configId" required="true"/>
    <transition name="ImportParameter">
        <default-response url="../../DataManagerImport/ImportParameters"/>
    </transition>
    <transition name="downloadContent" read-only="true">
        <parameter name="logContentId"/>
        <actions><entity-find-one entity-name="co.hotwax.datamanager.DataManagerContent" value-field="logContent"/>
            <script>ec.web.sendResourceResponse(logContent?.contentLocation)</script></actions>
        <default-response type="none"/>
    </transition>
    <transition name="updateDataManagerLog">
        <service-call name="co.hotwax.common.CommonServices.upload#DataManagerFile"/>
        <default-response/>
    </transition>
    <transition name="updateDataManagerConfig">
        <service-call name="update#co.hotwax.datamanager.DataManagerConfig"/>
        <default-response/>
    </transition>
    <transition name="cancelDataManagerImport">
        <service-call name="update#co.hotwax.datamanager.DataManagerLog"/>
        <default-response/>
    </transition>
    <transition name="EmptyFile">
        <actions>
            <entity-find-one entity-name="co.hotwax.datamanager.DataManagerConfig" value-field="config" cache="true"/>
            <set field="sd" from="ec.service.getServiceDefinition(config.importServiceName)"/>
            <if condition="sd == null">
                <return error="true" message="Service ${config.importServiceName?: ''} not found for configId ${configId}"/>
            </if>
            <set field="fileName" from="(config.description?: configId).replaceAll(/\s+/, '')"/>
            <set field="inParams" from="sd.getInParameterNames()"/>
            <set field="recordNumber" from="inParams?.remove('_recordNumber')"/>
            <set field="fileType" from="fileType" default-value="csv"/>
            <script><![CDATA[
                if (inParams) {
                    def response = ec.web.response
                    response.setCharacterEncoding("UTF-8")
                    response.setHeader("Cache-Control", "no-cache, must-revalidate, private")
                    try (writer = response.getWriter()) {
                        if ("csv" == fileType) {
                            // Generate the CSV with hyphen-separated key names for better visibility
                            def flexibleHeaders = inParams.collect { param ->
                                param.replaceAll(/([a-z0-9])([A-Z])/, '$1-$2').toLowerCase()
                            }
                            response.setContentType('text/csv')
                            response.setHeader("Content-Disposition", "attachment; filename=\"${fileName}.csv\";")
                            writer.write(flexibleHeaders.join(',') + '\n')
                        } else if ("json" == fileType) {
                            def ramlMap = org.moqui.impl.util.RestSchemaUtil.getRamlMapIn(sd)
                            def params = ramlMap?ramlMap.properties : [:];
                            response.setContentType('application/json')
                            response.setHeader("Content-Disposition", "attachment; filename=\"${fileName}.json\";")
                            writer.write(groovy.json.JsonOutput.toJson([params]))
                        } else {
                            ec.message.addError("File type ${fileType} not supported.")
                        }
                    }
                } else {
                    ec.message.addError("No parameters found for service ${config.importServiceName} [${configId}]")
                }
            ]]></script>
        </actions>
        <default-response url="."/>
    </transition>
    <pre-actions>
        <entity-find-one entity-name="co.hotwax.datamanager.DataManagerConfig" value-field="dataManagerConfig"/>
    </pre-actions>
    <actions>
        <if condition="!dataManagerConfig || !configId">
            <return message="No data manager config found for ID ${configId}" error="true"/>
        </if>
    </actions>
    <widgets>
        <container-box>
            <box-header title="Data Manager Config"/>
            <box-toolbar>
                <container-dialog id="EditDataManagerConfig" button-text="Edit" title="Edit Data Manager Config">
                    <form-single name="EditDataManagerConfig" map="dataManagerConfig" transition="updateDataManagerConfig">
                        <field name="configId"><default-field><hidden/></default-field></field>
                        <field name="importServiceName"><default-field><text-line/></default-field></field>
                        <field name="description"><default-field><text-line/></default-field></field>
                        <field name="executionModeId">
                            <default-field>
                                <drop-down allow-empty="true">
                                    <entity-options>
                                        <entity-find entity-name="moqui.basic.Enumeration" cache="true">
                                            <econdition field-name="enumTypeId" value="DMC_EXEC_MODE"/>
                                        </entity-find>
                                    </entity-options>
                                </drop-down>
                            </default-field>
                        </field>
                        <field name="multiThreading"><default-field>
                            <drop-down allow-empty="true">
                                <option key="Y" text="Y"/>
                                <option key="N"/>
                            </drop-down>
                        </default-field></field>
                        <field name="priority"><default-field><text-line/></default-field></field>
                        <field name="save"><default-field><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body>
                <form-single name="DataMangerConfigForm" map="dataManagerConfig">
                    <field name="configId"><default-field><display/> </default-field></field>
                    <field name="importServiceName"><default-field><display/> </default-field></field>
                    <field name="description"><default-field><display/> </default-field></field>
                    <field name="executionModeId">
                        <default-field><display-entity entity-name="moqui.basic.Enumeration" key-field-name="enumId" text="${description}" default-text="Queue"/> </default-field></field>
                    <field name="multiThreading">
                        <conditional-field condition="multiThreading"><display/></conditional-field>
                        <default-field><display text="N"/></default-field></field>
                    <field name="priority"><default-field><display/> </default-field></field>
                    <field name="lastUpdatedStamp"><default-field><display/> </default-field></field>
                    <field-layout>
                        <field-col-row>
                            <field-col lg="4">
                                <field-ref name="configId"/>
                                <field-ref name="description"/>
                                <field-ref name="importServiceName"/>
                            </field-col>
                            <field-col lg="4">
                                <field-ref name="executionModeId"/>
                                <field-ref name="multiThreading"/>
                                <field-ref name="priority"/>
                            </field-col>
                            <field-col lg="4">
                                <field-ref name="lastUpdatedStamp"/>
                            </field-col>

                        </field-col-row>
                    </field-layout>
                </form-single>
            </box-body>
        </container-box>
        <container-box>
            <box-header title="Data Manager Logs"/>
            <box-toolbar>
                <link url="EmptyFile" link-type="hidden-form-link" icon="fa fa-file-code-o" parameter-map="[configId: configId, fileType:'json']" text=" " tooltip="Download sample JSON template"/>
                <link url="EmptyFile" link-type="hidden-form-link" icon="fa fa-file-text-o" parameter-map="[configId: configId]" text=" " tooltip="Download sample CSV template"/>
                <container-dialog id="UploadFile" button-text="Upload File">
                    <form-single name="UploadDataManagerFile" transition="updateDataManagerLog">
                        <field name="contentFile">
                            <default-field>
                                <file accept=".csv,.json"/>
                            </default-field>
                        </field>
                        <field name="configId"><default-field><hidden/></default-field></field>
                        <field name="submitButton"><default-field title="Add"><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </box-toolbar>
            <box-body>
                <form-list name="DataManagerConfigList" list="dataManagerImports" show-page-size="true"  skip-form="true">
                    <entity-find entity-name="co.hotwax.datamanager.DataManagerLog" list="dataManagerImports">
                        <search-form-inputs default-order-by="-createdDate"/>
                        <econdition field-name="configId" from="configId"/>
                    </entity-find>
                    <row-actions>
                        <entity-find entity-name="co.hotwax.datamanager.DataManagerContent" list="dmContents">
                            <econdition field-name="logId" from="logId"/>
                            <order-by field-name="-contentDate"/>
                        </entity-find>
                        <filter-map-list list="dmContents" to-list="uploadedContents">
                            <field-map field-name="logContentTypeEnumId" value="DmcntImported"/>
                        </filter-map-list>
                        <filter-map-list list="dmContents" to-list="errorContents">
                            <field-map field-name="logContentTypeEnumId" value="DmcntError"/>
                        </filter-map-list>
                        <set field="uploadedContent" from="uploadedContents?uploadedContents[0]:null"/>
                        <set field="errorContent" from="errorContents?errorContents[0]:null"/>
                        <script>
                            uploadedFileSize = uploadedContent?.fileSize ? (uploadedContent.fileSize / (1024 * 1024)).toBigDecimal().setScale(3, BigDecimal.ROUND_HALF_UP) : null
                            errorFileSize = errorContent?.fileSize   ? (errorContent.fileSize   / (1024 * 1024)).toBigDecimal().setScale(3, BigDecimal.ROUND_HALF_UP) : null
                            totalRecord = co.hotwax.util.MaargUtil.getCompactNumber(totalRecordCount, ec.user.locale)
                            failedRecord = co.hotwax.util.MaargUtil.getCompactNumber(failedRecordCount, ec.user.locale)
                        </script>
                    </row-actions>
                    <field name="logId"><default-field><display/></default-field></field>
                    <field name="parentLogId">
                        <conditional-field condition="parentLogId">
                            <label tooltip="Parent" text="${parentLogId}" type="small"/>
                        </conditional-field>
                        <default-field title="" tooltip="Parent">
                        </default-field></field>
                    <field name="configId">
                        <header-field><hidden/></header-field>
                        <default-field><hidden/></default-field>
                    </field>
                    <field name="uploadedFile">
                        <default-field title="Uploaded File" tooltip="Uploaded File">
                            <link url="downloadContent" link-type="anchor" text="" icon="fa fa-download"
                                  parameter-map="[configId: configId, logContentId:uploadedContent.logContentId]" tooltip="${uploadedContent?.fileName}" condition="uploadedContent"/>
                            <label text="${uploadedFileSize} MB" type="p" condition="uploadedFileSize"/>
                        </default-field>
                    </field>
                    <field name="importParameter">
                        <default-field>
                            <dynamic-dialog id="ImportParameter" button-text="View" title="Parameters for import [${logId}]" transition="ImportParameter" parameter-map="[logId:logId]" button-style=""/>
                        </default-field>
                    </field>
                    <field name="errorFile">
                        <default-field title="Error File" tooltip="Error File">
                            <link url="downloadContent" link-type="anchor" text="" icon="fa fa-download"
                                  parameter-map="[configId: configId, logContentId:errorContent.logContentId]" tooltip="${errorContent?.fileName}" condition="errorContent"/>
                            <label text="${errorFileSize}MB" type="p" condition="errorFileSize"/>
                        </default-field>
                    </field>
                    <field name="createdByUserLogin">
                        <default-field title="" tooltip="Created By"><display-entity entity-name="moqui.security.UserAccount" key-field-name="username" text="${userFullName}"/></default-field>
                    </field>
                    <field name="createdDate">
                        <header-field show-order-by="true"><display/></header-field>
                        <default-field><display format="yyyy-MM-dd HH:mm:ss"/></default-field>
                    </field>
                    <field name="startDateTime">
                        <header-field show-order-by="true"><display/></header-field>
                        <default-field><display format="yyyy-MM-dd HH:mm:ss"/></default-field>
                    </field>
                    <field name="completionDateTime">
                        <conditional-field condition="statusId == 'DmlsCancelled' || statusId == 'DmlsCrashed'" tooltip="Cancelled Date Time" title="">
                            <display text="${cancelDateTime}" format="yyyy-MM-dd HH:mm:ss"/>
                        </conditional-field>
                        <conditional-field condition="statusId == 'DmlsFinished'" tooltip="Finished Date Time" title="">
                            <display text="${finishDateTime}" format="yyyy-MM-dd HH:mm:ss"/>
                        </conditional-field>
                    </field>
                    <field name="cancelDateTime">
                        <default-field><hidden/></default-field>
                    </field>
                    <field name="finishDateTime">
                        <default-field><hidden/></default-field>
                    </field>
                    <field name="statusId">
                        <header-field>
                            <drop-down allow-empty="true" allow-multiple="true" submit-on-select="true">
                                <entity-options>
                                    <entity-find entity-name="moqui.basic.StatusItem" cache="true">
                                        <econdition field-name="statusTypeId" value="DataManagerLog"/>
                                        <order-by field-name="-description"/>
                                    </entity-find>
                                </entity-options>
                            </drop-down>
                        </header-field>
                        <default-field><display-entity entity-name="moqui.basic.StatusItem"/></default-field>
                    </field>
                    <field name="productStoreId">
                        <header-field>
                            <drop-down allow-empty="true" submit-on-select="true">
                                <entity-options text="${storeName} [${productStoreId}]">
                                    <entity-find entity-name="org.apache.ofbiz.product.store.ProductStore" cache="true"/>
                                </entity-options>
                            </drop-down>
                        </header-field>
                        <default-field title="Product Store"><display-entity entity-name="org.apache.ofbiz.product.store.ProductStore" text="${storeName}"/></default-field>
                    </field>
                    <field name="runThread">
                        <header-field show-order-by="true"><display/></header-field>
                        <default-field>
                            <display/></default-field>
                    </field>
                    <field name="totalRecordCount">
                        <header-field show-order-by="true"><display/></header-field>
                        <default-field title="Total Record" tooltip="Total Record ${totalRecordCount?:0}">
                            <display text="${totalRecord?:0}"/></default-field>
                    </field>
                    <field name="failedRecordCount">
                        <header-field show-order-by="true"><display/></header-field>
                        <default-field title="Failed Record" tooltip="Failed Record ${failedRecordCount?:0}" container-style="text-danger">
                            <display text="${failedRecord?:0}"/>
                        </default-field>
                    </field>
                    <field name="executionTime">
                        <conditional-field condition="startDateTime &amp;&amp; finishDateTime">
                            <display text="${(groovy.time.TimeCategory.minus(finishDateTime, startDateTime))}"/>
                        </conditional-field>
                        <conditional-field condition="startDateTime &amp;&amp; cancelDateTime">
                            <display text="${(groovy.time.TimeCategory.minus(cancelDateTime, startDateTime))}"/>
                        </conditional-field>
                    </field>
                    <field name="cancel">
                        <default-field title=" ">
                            <link url="cancelDataManagerImport" text="X" confirmation="Are you sure want to cancel the import?"
                                    parameter-map="[configId:configId, logId: logId, statusId: 'DmlsCancelled', cancelDateTime: ec.user.nowTimestamp]" condition="'DmlsPending' == statusId"/>
                        </default-field>
                    </field>
                    <!--<field name="delete">
                        <default-field title=" ">
                            <link url="deleteDataManagerImport" text="X" confirmation="Are you sure want to delete the import record?"
                                  parameter-map="[configId:configId, logId: lodId]"/>
                        </default-field>
                    </field>-->
                    <form-list-column>
                        <field-ref name="logId"/>
                        <field-ref name="parentLogId"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="configId"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="uploadedFile"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="importParameter"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="errorFile"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="createdDate"/>
                        <field-ref name="createdByUserLogin"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="startDateTime"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="statusId"/>
                        <field-ref name="completionDateTime"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="productStoreId"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="runThread"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="totalRecordCount"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="failedRecordCount"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="executionTime"/>
                    </form-list-column>
                    <form-list-column>
                        <field-ref name="cancel"/>
                    </form-list-column>
                </form-list>
            </box-body>
        </container-box>
    </widgets>
</screen>