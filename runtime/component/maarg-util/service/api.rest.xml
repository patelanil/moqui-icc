<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="https://moqui.org/xsd/rest-api-3.xsd"
          name="api" displayName="Public API" version="1.0.0" description="OMS Public REST api" require-authentication="false">
    <!--TODO: Need to introduce auth mechanism
        One way is to Configure the cores so that api can be called only from specific domain only
     -->
    <resource name="stores">
        <method type="post">
            <service name="co.hotwax.search.SearchServices.lookup#Stores"/>
        </method>
    </resource>
    <!-- FIXME: It’s not a good idea to expose Solr queries directly.
        There should be an abstraction layer — the service should internally call the Solr API, but Solr queries must not be directly accessible from the client side.
    -->
    <resource name="geocode">
        <method type="post">
            <service name="co.hotwax.search.SearchServices.lookup#PostalCode"/>
        </method>
    </resource>
</resource>