<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <!-- Extending the entity to include a field to store productStoreId so that it can be used in sendPath of SystemMessageType for brand specific feeds -->
    <extend-entity entity-name="SystemMessage" package="moqui.service.message">
        <field name="productStoreId" type="id"/>
        <field name="shopId" type="id"/>
    </extend-entity>

    <!-- Extending the entity to include a field to store reference of parent job name in the cloned service job -->
    <extend-entity entity-name="ServiceJob" package="moqui.service.job">
        <field name="cronExpression" type="text-short" enable-audit-log="true"/>
        <field name="parentJobName" type="text-short"/>
        <field name="jobTypeEnumId" type="id"/>
        <field name="permissionGroupId" type="id"/>
        <field name="instanceOfProductId" type="id"/>
        <relationship type="one-nofk" title="ServiceJobType" related="moqui.basic.Enumeration">
            <key-map field-name="jobTypeEnumId"/></relationship>
        <relationship type="one" title="UserGroup" related="moqui.security.UserGroup">
            <key-map field-name="permissionGroupId" related="userGroupId"/></relationship>
        <relationship type="one-nofk" title="InstanceOfProduct" related="org.apache.ofbiz.product.product.Product">
            <key-map field-name="instanceOfProductId" related="productId"/></relationship>
        <seed-data>
            <moqui.basic.EnumerationType description="Service Job Type" enumTypeId="ServiceJobType"/>
        </seed-data>
    </extend-entity>
    <view-entity entity-name="DataManagerConfigAndLog" package="co.hotwax.datamanager">
        <member-entity entity-alias="DMC" entity-name="co.hotwax.datamanager.DataManagerConfig"/>
        <member-entity entity-alias="DML" entity-name="co.hotwax.datamanager.DataManagerLog" join-from-alias="DMC">
            <key-map field-name="configId"/>
        </member-entity>
        <alias-all entity-alias="DMC"/>
        <alias-all entity-alias="DML"/>
    </view-entity>
</entities>